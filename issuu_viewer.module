<?php

/**
 * @file
 * Provides Issuu documents embedding functionality.
 */

/**
 * Implements hook_theme().
 */
function issuu_viewer_theme() {
  $theme = [];

  $theme['issuu_viewer_iframe'] = [
    'variables' => [
      'document_id' => NULL,
      'background_color' => NULL,
      'height' => NULL,
    ],
    'template' => 'issuu_viewer_iframe',
  ];

  return $theme;
}
